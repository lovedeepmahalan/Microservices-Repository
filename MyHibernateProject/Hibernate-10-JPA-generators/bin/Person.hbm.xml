<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="in.pwskills.nitin.bean.PersonInfo" table="Customer">
  		<!-- Writing code for primary key -->
  		<id name="id" type="String" column="id">
			<generator class="in.pwskills.nitin.Generator.GenerateId" />
		
		</id>
  		
  		<property name="pname" column="pname" type="String" />
  		<property name="paddr" column="paddr" type="String" />
  	</class>
  </hibernate-mapping>